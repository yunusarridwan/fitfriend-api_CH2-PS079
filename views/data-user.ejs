<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar User</h2>
            <% if (msg.length !==0) { %>
                <div class="alert alert-success" role="alert">
                    <%= msg %>
                </div>
                <% } %>

                    <table class="table table-striped-columns mt-3">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">UID</th>
                                <th scope="col">Nama</th>
                                <th scope="col">Email</th>
                                <th scope="col">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (users.length===0 ) { %>
                                <div class="alert alert-danger fw-bold" role="alert">
                                    Data user not found <br>
                                </div>
                                <% } %>
                                    <% users.forEach((user,i)=> { i++%>
                                        <tr>
                                            <th scope="row">
                                                <%= i++ %>
                                            </th>
                                            <td>
                                                <%= user.uid %>
                                            </td>
                                            <td>
                                                <%= user.name %>
                                            </td>
                                            <td>
                                                <%= user.email %>
                                            </td>
                                            <td>
                                                <a href="/user/<%= user.uid %>/detail"
                                                    class="badge rounded-pill btn btn-primary"><i
                                                    class="bi bi-info-circle"></i> detail
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>
                        </tbody>
                    </table>
        </div>
    </div>
</div>